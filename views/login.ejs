<% include layout %>

<main class="main-first-page">
    <div class="login-container center-block">
        <h1 id="welcome">Welcome!</h1>
        <ul class="nav nav-tabs">
            <li class="active"><a href="#login">LOG IN</a></li>
            <li><a href="/registration">SIGN UP</a></li>
        </ul>
        <div class="tab-content">
            <div id="login" class="tab-pane fade in active">
                <h2>Welcome!</h2>
                <div id="warning-email-password"><%= error %></div>
                <form method="post" action='/login'>
                  <table class="table table-no-inside-borders">
                    <tr>
                    <div class="form-group">
                        <td><label for="email">E-mail</label></td>
                        <td><input type="email" name='email' class="form-control center-block" id="email" placeholder="E-mail"></td>
                    </div>
                  </tr>
                  <tr>
                    <div class="form-group center-block">
                        <td><label for="password">Password</label></td>
                        <td>
                          <input type="password" name='password' class="form-control center-block" id="password" placeholder="Password">
                        </td>
                    </div>
                  </tr>
                  </table>
                    <div class="form-group center-block">
                        <div class="check center-block">
                            <input type="checkbox" class="checkbox-login" name="rememberMe"
                                   id="rememberMe"/><label for="rememberMe">
                                <div id="remember">Remember</div>
                            </label>
                        </div>
                    </div>
                    <div class="form-group center-block">
                        <div class="check center-block">
                            <button type="submit" class="btn login">Login</button>
                        </div>
                    </div>
                    <a href="/forgotpassword" id="forgot-password">Forgot your password?</a>

                </form>
            </div>
        </div>
    </div>
</main>
