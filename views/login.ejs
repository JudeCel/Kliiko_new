<% include header %>

<main class="main-first-page">
    <div class="login-container center-block text-font-family">
        <ul class="nav nav-tabs">
            <li class="active">
              <a class="background-yellow text-font-family-tabs text-white text-shadow-gray btn login-kliiko-tab" href="#login">Login to klzii</a>
            </li>
            <% if(message != 'Invite not found') { %>
              <li>
                <a class="background-green text-font-family-tabs text-white text-center text-shadow-gray login-signup-tab" href="/registration">Get a klzii Account</a>
              </li>
            <% } %>
        </ul>
        <div class="tab-content border-yellow">
            <div id="login" class="tab-pane fade in active">
                <h1 class="text-gray-dark text-center">Welcome!</h1>
                <div class='text-center background-yellow'>
                  <b><%= message %></b>
                </div>

                <div class="error-column has-error" id="warning-email-password">
                  <div class="error-field"><%= error.dialog ? "" : error %></div>
                  <button type="button" class="close">Ã—</button>
                </div>

                <form method="post" action='/login'>
                  <div class="container-fluid">
                    <div class="row">
                      <div class="col-md-12">
                        <table class="table table-no-inside-borders text-left text-gray-dark table-v-content-middle">
                          <tr>
                              <td class="form-group text-brown-dark text-no-bold">
                                <label class="text-no-bold text-login-page" for="email">Email</label>
                              </td>
                              <td class="form-group text-center">
                                <img src="/icons/user.png" />
                              </td>
                              <td class="form-group">
                                <input type="email" name='email' class="form-control center-block border-brown" id="email" placeholder="E-mail">
                              </td>
                          </tr>
                          <tr>
                              <td class="form-group text-gray-medium">
                                <label class="text-no-bold text-login-page text-brown-dark" for="password">Password</label>
                              </td>
                              <td class="form-group text-center">
                                <img src="/icons/lock.png" />
                              </td>
                              <td class="form-group">
                                <input type="password" name='password' class="form-control center-block border-brown" id="password" placeholder="Password">
                              </td>

                          </tr>
                          <tr>
                            <td></td>
                            <td class="text-center">
                                <input type="checkbox" class="checkbox-login" name="rememberMe"id="rememberMe"/>
                                <label for="rememberMe">
                                </label>
                            </td>
                            <td>Remember me</td>
                          </tr>
                        </table>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12 form-group">
                        <button type="submit" class="btn border-yellow text-brown-light border-radius-none background-transp pull-right login-btn-size">Login</button>
                        <a class="btn border-red border-radius-none text-red-dark text-no-decoration pull-left login-btn-size forgot-password-padding" href="/forgotpassword" id="forgot-password">Forgot your Password?</a>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12 form-group">
                        <div class="form-group center-block">
                          <div class="check-google center-block">
                            <a href="/auth/google" class="btn btn-block btn-social btn-google">
                              <i class="fa fa-google"></i> Login or sign up with Google
                            </a>
                          </div>
                        </div>
                        <div class="form-group center-block">
                          <div class="check-facebook center-block">
                            <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook">
                              <i class="fa fa-facebook"></i> Login or sign up with Facebook
                            </a>
                          </div>
                        </div>
                      </div>
                    </div>

                  </div>

                </form>
            </div>
        </div>
    </div>
</main>

<% if(error.dialog) { %>
  <% var errors = error; %>
  <% include _registrationDialogModal %>
  <script>
    jQuery('#registrationDialogModal').modal('show');
  </script>
<% } %>

<% include footer %>
