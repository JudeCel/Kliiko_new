<% include _header %>

<div class='login-container center-block text-font-family'>
  <div class='tab-content border-green'>
    <h1 class='text-gray-dark text-center'>One last thing...</h1>
    <p class='text-center'>There's just one more step. You need to choose a pricing plan below.</p>

    <form method='post' action='/dashboard/selectPlan' ng-submit='selectPlanSubmited = true'>
      <div class='col-md-12'>
        <table class='table table-no-inside-borders text-left text-gray-dark table-v-content-middle' id='login'>
          <tr class='text-center'>
            <td>
              <input type='radio' class='checkbox-blue' value='freeTrial' name='planType' id='freeTrial' checked/>
              <label for='freeTrial'></label>
              Free Trial
            </td>

            <td>
              <input type='radio' class='checkbox-login' value='paidPlan' name='planType' id='paidPlan'/>
              <label for='paidPlan'></label>
              Paid Plan
            </td>
          </tr>
        </table>
      </div>

      <div class='row'>
        <div class='col-xs-offset-1 col-xs-10 form-group'>
          <button type='button' class='btn border-brown text-brown-light border-radius-none background-transp login-btn-size' data-toggle='modal' data-target='#upgradePlanModal'>Learn More</button>
          <button type='submit' ng-disabled='selectPlanSubmited' class='btn border-green text-green-dark border-radius-none background-transp pull-right login-btn-size'>Next</button>
        </div>
      </div>
    </form>
  </div>
</div>


<div class='modal fade' id='upgradePlanModal' tabindex='-1'  aria-labelledby='myModalLabel'>
  <div class='modal-dialog contactDetailsModal'>

    <div class='modal-content'>
      <div class='modal-header'>
        <div class='btn border-green text-green-dark border-radius-none background-transp pull-left back_button'  data-dismiss='modal'> <img src='/icons/back_green.png'/>  Back</div>
        <h3 class='modal-title text-center'>Learn More About Paid Plans</h3>
      </div>

      <div class='row row-centered'>
        <div class='col-md-offset-1 col-md-10 Ñol-centered dashboard-index text-center'>
          <div class='row' id='upgrade-plan-content'>
            <% include ../welcomeScreenPlans %>
          <div>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ../footer %>
