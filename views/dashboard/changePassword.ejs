<% include ../header %>

<main class="main-first-page">
  <div class="container">
    <h1 id="welcome">Welcome!
      <%if(bannerPath) { %>
        <div class="col-xs-12 col-sm-12 col-md-12">
          <img src='<%= bannerPath %>' alt="" />
        </div>
      <% } %>
    </h1>
    <ul class="nav nav-tabs" id="nav-tabs-dashboard">
      <li class="active"><a href="#login">Account Profile<img id="ic_tab_profile_active" src="../icons/ic_tab_profile_active.png"></a></li>
      <li><a href="#">Chat Sessions<img id="ic_tab_profile_active" src="../icons/ic_tab_sessions.png"></a></li>
      <li><a href="#">Resources<img id="ic_tab_profile_active" src="../icons/ic_tab_resources.png"></a></li>
    </ul>
    <div class="tab-content">
      <div id="login" class="tab-pane fade in active">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xs-3 col-sm-3 col-md-3">
              <% include _buttons %>
            </div>
            <div class="col-xs-9 col-sm-9 col-md-9">
              <h2 class="center-block">Change Password</h2>
              <div id="signup" class="tab-pane fade in active">
                <span><%= message %></span>
                <form method="post" action="/dashboard/changepassword">
                  <div class="form-group">
                    <label for="password">New Password*</label>
                    <span class="has-error"><%= error %></span>
                    <input type="password" class="form-control center-block" name="password" id="password" placeholder="">
                  </div>
                  <div class="form-group">
                    <label for="password">Confirm New Password*</label>
                    <span class="has-error"><%= error %></span>
                    <input type="password" class="form-control center-block" name="repassword" id="repassword" placeholder="">
                  </div>
                  <div class="form-group center-block">
                    <div class="check center-block">
                      <input type="submit" value="Save" class="btn login"></input>
                    </div>
                    <div class="check center-block">
                      <a href="#cancel" class="btn cancel">Cancel</a>
                    </div>
                  </div>
                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<% include ../footer %>
