<!DOCTYPE html>
<html lang="en" ng-app="KliikoApp" ng-controller="AppController as app">
<head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <% include headerIncludes %>
</head>
<body class="hide-mobile-page">
  <div class='dashboard-header'>
    <div class='col-xs-2 logo-min-width'>
      <a href='/'><img class='row' src='/icons/Klzii_logo_lines.png'></a>
    </div>
    <div class='col-xs-1 current-domain-name'>
      <%= currentResources.account.name %>
    </div>
    <div class='col-xs-12 col-md-7 btn-group remove-link-line nav-button-top-margin text-right' role='group'>
      <span id='welcome-user' class='hidden'>Welcome, {{ app.accountUser.firstName }}!</span>

      <button class='btn-header-red' type='button'>
        Help
        <span class='glyphicon glyphicon-question-sign' aria-hidden='true'></span>
      </button>

      <button class='btn-header-yellow' type='button' id='headerDropdown' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
        My Details
        <span class='glyphicon glyphicon-menu-hamburger' aria-hidden='true'></span>
      </button>

      <ul class='dropdown-menu dropdown-menu-right' aria-labelledby='headerDropdown'>
        <li class='text-right text-size-dashboard'>
          <a ng-click='app.openModal("contactDetailsModal")'> Contact Details 
            <img class="my-details-container" src='/icons/contact_list_red.png' alt='' />
          </a>
        </li>
        <li role="separator" class="divider"></li>
        <li class='text-right text-size-dashboard'>
          <a ng-click='app.openModal("changePasswordModal")'> Change Password
            <img class="my-details-container" src='/icons/password_green_flat.png' alt='' />
          </a>
        </li>
        <li role="separator" class="divider"></li>
        <li class='text-right text-size-dashboard'>
          <a ng-click='app.openModal("emailNotificationModal")'> Email Notification
            <img class="my-details-container" src='/icons/email_notification.png' alt='' />
          </a>
        </li>
        <li role="separator" class="divider"></li>
        <li class='text-right text-size-dashboard'><a href='/my-dashboard'>My Dashboard<img class="my-details-container" src='/icons/dashboard_blue.png' alt='' /></a></li>
        <li role="separator" class="divider" ng-if="app.hasPermissions('canPaymentDetails')"></li>
        <li class='text-right text-size-dashboard' ng-if="app.hasPermissions('canPaymentDetails')">
          <a href='/account-hub/paymentDetails' target="_blank">Payment Details<img class="my-details-container" src='/icons/payment_green.png' alt='' /></a>
        </li>
        <li role="separator" class="divider" ng-if="app.hasPermissions('canSmsCredits')"></li>
        <li class='text-right text-size-dashboard' ng-if="app.hasPermissions('canSmsCredits')">
          <a href="/account-hub#/smsCredits">Get SMS credits</a>
        </li>
        <li role="separator" class="divider"></li>
        <li class='text-right text-size-dashboard'><a href='/logout'>Logout<img class="my-details-container" src='/icons/logout_yellow.png' alt='' /></a></li>
      </ul>
    </div>
  </div>

  <div id="small-screen">
    <div>This site is not compatible with small window sizes.</div>
  </div>

  <% include _changePasswordModal %>
  <% include _contactDetailsModal %>
  <% include _emailNotificationModal %>
