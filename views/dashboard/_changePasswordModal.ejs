<div class='modal fade' id='changePasswordModal' role='dialog' ng-controller="ChangePasswordModalController as cdm">
  <div class='modal-dialog changePasswordModal'>
    <div class='modal-content border-green border-radius-none'>
      <div class='modal-header'>
        <button type='button' class='close' data-dismiss='modal'>&times;</button>
        <h2 class='modal-title text-center'>Change Password</h2>
      </div>
      <div class='modal-body'>
        <div class='tab-pane fade in active'>
          <div class='text-center background-green'><b id='changePasswordMessage'></b></div>
          <div id='changePasswordError' class='text-center background-red'></div>
          <form method="post" ng-submit="cdm.updatePassword(cdm.passwordData, cdm.changePasswordForm)" name="cdm.changePasswordForm">

            <div class="form-group">
              <label for="password">New Password</label>
              <input ng-model="cdm.passwordData.password" type="password" class="form-control center-block" name="password" id="password" placeholder="">
            </div>
            
            <div class="form-group">
              <label for="repassword">Confirm New Password</label>
              <input ng-model="cdm.passwordData.passwordConfirm" type="password" class="form-control center-block" name="passwordConfirm" id="passwordConfirm" placeholder="">
            </div>

            <div class='modal-footer'><!-- 
              <button type='button' class='btn-simple border-green text-green-dark' data-dismiss='modal'>Close</button>
              <button type='button' class='btn-simple border-green text-green-dark' id='changePasswordButton'>Done</button> -->
              <span class="pull-right">
                <button type="button" ng-show="cdm.changePasswordForm.$dirty" ng-click="cdm.cancel()" class="btn border-red text-red-dark border-radius-none background-transp pull-right- btn-md">Cancel</button>&nbsp;&nbsp;
                <button type="submit" ng-show="cdm.changePasswordForm.$dirty" class="btn border-green text-green-dark border-radius-none background-transp pull-right- btn-md">Update</button>
                <button type="button" ng-show="cdm.changePasswordForm.$pristine" ng-click="cdm.cancel()" class="btn border-green text-green-dark border-radius-none background-transp pull-right- btn-md">Done</button>
              </span>
            </div>

          </form>
        </div>
      </div>
    </div>
  </div>
</div>
