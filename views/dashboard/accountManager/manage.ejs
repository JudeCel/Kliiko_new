<% include ../_header %>

<main class='main-first-page' ng-controller='DashboardCtrl'>
  <div class='container'>
    <% include ../../pageBanner %>

    <% include ../_navTabs %>

    <div class='dashboard-container border-blue'>
      <div class='row'>
        <div class='col-xs-12 col-sm-12 col-md-12'>
          <% include ../_buttons %>
        </div>
        <div class='col-xs-12 col-sm-12 col-md-12'>
          <div class='row'>
            <div class='dashboard-container'>
              <h2 class="center-block">Contact details</h2>
              <div id="signup" class="tab-pane fade in active">
                <span><%= message %></span>

                <form method="post" action="/dashboard/accountmanager/manage">
                  <div class="form-group">
                    <label for="firstName">First Name*</label>
                    <span class="has-error"><%= error.firstName %></span>
                    <input type="text" class="form-control" name="firstName" id="firstName" placeholder="" value="<%= account.firstName %>">

                    <label for="lastName">Last Name*</label>
                    <span class="has-error"><%= error.lastName %></span>
                    <input type="text" class="form-control" name="lastName" id="lastName" placeholder="" value="<%= account.lastName %>">

                    <label for="gender">Gender*</label>
                    <span class="has-error"><%= error.gender %></span>
                    <select name="gender" id="gender" class="form-control">
                      <option value=""></option>
                      <option value="male">Male</option>
                      <option value="female">Female</option>
                    </select>

                    <label for="email">Email *</label>
                    <span class="has-error"><%= error.email %></span>
                    <input type="email" class="form-control" name="email" id="email" placeholder="" value="<%= account.email %>">

                    <label for="mobile">Mobile Number</label>
                    <span class="has-error"><%= error.mobile %></span>
                    <input type="text" class="form-control" name="mobile" id="mobile" placeholder="" value="<%= account.mobile %>">
                  </div>

                  <div class="form-group">
                    <label for="postalAddress">Postal Address</label>
                    <input type="text" class="form-control" name="postalAddress" id="postalAddress" placeholder="" value="<%= account.postalAdress %>">

                    <div>
                      <label for="city">City</label>
                      <input type="text" class="form-control" name="city" id="city" placeholder="" value="<%= account.city %>">
                    </div>

                    <div>
                      <label for="state">State</label>
                      <input type="text" class="form-control" name="state" id="state" placeholder="" value="<%= account.state %>">
                    </div>

                    <div>
                      <label for="postCode">Postcode</label>
                      <input type="text" class="form-control" name="postCode" id="postCode" placeholder="" value="<%= account.postCode %>">
                    </div>

                    <div>
                      <label for="country">Country</label>
                      <input type="text" class="form-control" name="country" id="country" placeholder="" value="<%= account.country %>">
                    </div>

                    <br>

                    <label for="companyName">Company Name</label>
                    <input type="text" class="form-control" name="companyName" id="companyName" placeholder="" value="<%= account.companyName %>">

                    <label for="landlineNumber">Landliner Number</label>
                    <input type="phone" class="form-control" name="landlineNumber" id="landlineNumber" placeholder="" value="<%= account.landlineNumber %>">

                  </div>

                  <div class="form-group center-block">
                    <div class="check center-block">
                      <input type="submit" value="Save" class="btn login"></input>
                    </div>
                    <div class="check center-block">
                      <a href="#cancel" class="btn cancel">Cancel</a>
                    </div>
                  </div>

                </form>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<% include ../../footer %>
