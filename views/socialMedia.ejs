<% if(locals.invite) {
   var googleUrl = '/invite/auth/google/' + invite.token;
   var facebookUrl = '/invite/auth/facebook/' + invite.token;
} else {
   var googleUrl = '/auth/google';
   var facebookUrl = '/auth/facebook';
} %>

<div class="row">
  <div class="col-md-12 form-group">
    <div class="form-group center-block">
      <div class="check-google center-block">
        <a href="<%= googleUrl %>" class="btn btn-block btn-social btn-google">
          <i class="fa fa-google"></i> <%= googleActionText %>
        </a>
      </div>

    </div>
    <div class="form-group center-block">
      <div class="check-facebook center-block">
        <a href="<%= facebookUrl %>" class="btn btn-block btn-social btn-facebook">
          <i class="fa fa-facebook"></i> <%= facebookActionText %>
        </a>
      </div>
    </div>
  </div>
</div>
