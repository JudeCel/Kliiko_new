<% include ../header %>

<div class="login-container center-block">
  <div class="tab-content border-yellow text-font-family">
    <div id="login" class="tab-pane fade in active">
      <h1 class="text-center text-gray-dark">Accept Invite</h1>

      <%if(invite.userType == "new") { %>
      <h5 class="text-center text-gray-dark">
        To accept invite you must provide password and account name.
      </h5>
      <div class="error-column has-error text-center" id="warning-email-password"><%= error %></div>
      <form class="non-resubmitable" method="post" action="/invite/accept/<%= invite.token %>" novalidate>
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <table class="table table-no-inside-borders text-left text-gray-dark table-v-content-middle">
                <tr>
                  <td class="form-group">
                    <label class="pull-right" for="accountName">Account Name</label>
                  </td>
                  <td class="form-group text-center">
                    <img src="/icons/user.png" />
                  </td>
                  <td class="form-group">
                    <input type="text" value="" class="form-control center-block border-brown" name="accountName" id="accountName" placeholder="Account Name">
                  </td>
                </tr>
                <tr>
                  <td class="form-group">
                    <label class="pull-right" for="password">Password</label>
                  </td>
                  <td class="form-group text-center">
                    <img src="/icons/lock.png" />
                  </td>
                  <td class="form-group">
                    <input type="password" value="" class="form-control center-block border-brown" name="password" id="password" placeholder="Password">
                  </td>
                </tr>
              </table>
            </div>
          </div>
      <% } else { %>
      <h5 class="text-center text-gray-dark">
        To accept invite you must press the button.
      </h5>
      <div class="error-column has-error text-center" id="warning-email-password"><%= error %></div>
      <div>
      <form method="post" action="/invite/accept/<%= invite.token %>">
        <div>
      <% } %>
          <button type="submit" value="Submit" class="btn submit-btn-size border-yellow text-brown-light background-transp">Accept</button>
          <a href="/invite/decline/<%= invite.token %>" class="btn submit-btn-size border-yellow text-brown-light background-transp pull-right">Go to decline</a>
        </div>
      </form>
    </div>
  </div>
</div>

<% include ../footer %>
